<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80f5f5f5" /> <!-- 阴影颜色 -->
            <corners android:radius="10dp" /> <!-- 圆角半径，根据需要进行调整 -->
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- 背景颜色 -->
            <corners android:radius="10dp" /> <!-- 圆角半径，根据需要进行调整 -->
            <stroke
                android:width="1dp"
                android:color="#ffffff" /> <!-- 边框颜色和宽度 -->
        </shape>
    </item>

</layer-list>
