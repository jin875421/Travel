<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80f5f5f5" /> <!-- 阴影颜色 -->
            <corners android:radius="20dp" /> <!-- 圆角半径（可根据需要进行调整） -->
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <!-- circular_border.xml -->
        <shape android:shape="rectangle">
            <solid android:color="#80f5f5f5" /> <!-- 透明背景 -->
            <stroke
                android:width="1dp"
                android:color="#80f5f5f5" /> <!-- 边框颜色 -->
            <corners android:radius="20dp" /> <!-- 圆角半径（50dp 可根据需要进行调整）-->
        </shape>
    </item>

</layer-list>
