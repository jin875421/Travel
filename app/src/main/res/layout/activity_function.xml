<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.travelRecord.FunctionActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0c0c0c"
            android:text="实用工具"/>
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:id="@+id/todolist"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/todolist" />
                <TextView
                    android:text="计划列表"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/expense_record"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="95dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/expense_record" />
                <TextView
                    android:text="记账"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/AI_1"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="95dp"
                    android:paddingLeft="14dp"
                    android:src="@drawable/ai_iamge_recognition" />
                <TextView
                    android:text="识图"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/AI_5"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:paddingLeft="25dp"
                    android:src="@drawable/ai_plant_recognition" />
                <TextView
                    android:text="植物"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/speechBtn"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:paddingLeft="25dp"
                    android:src="@drawable/ai_plant_recognition" />
                <TextView
                    android:text="语音识别"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wenxin"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:paddingLeft="25dp"
                    android:src="@drawable/ai_plant_recognition" />
                <TextView
                    android:text="文心一言"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rltl_photo_meld"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:paddingLeft="25dp"
                    android:src="@drawable/ai_iamge_recognition" />
                <TextView
                    android:text="图片融合"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100dp">-->
<!--        -->
<!--    </LinearLayout>-->

    </LinearLayout>
</RelativeLayout>