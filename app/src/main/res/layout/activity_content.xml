<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activities.travelRecord.travelRecordActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <EditText
            android:id="@+id/Ed_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/edittext_underline"
            android:gravity="center"
            android:text="旅行地"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:text="上传"
            android:textColor="#2196F3"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:padding="10dip">

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/border_backgrounddjp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/background_hint"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <GridView
                            android:id="@+id/gridView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:numColumns="3" />


                    </LinearLayout>

                </HorizontalScrollView>

                <EditText
                    android:id="@+id/et_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_underline"
                    android:gravity="left"
                    android:hint="地点（必填）"
                    android:paddingLeft="5dp"
                    android:textColorHighlight="#99CCFF"
                    android:textCursorDrawable="@drawable/cursor_style"
                    android:textSize="16sp" />

                <ListView
                    android:id="@+id/sug_list"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/et_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:gravity="left"
                    android:hint="记录下此刻的心情吧！"
                    android:inputType="textMultiLine"
                    android:lines="20"
                    android:minLines="12"
                    android:paddingLeft="5dip"
                    android:textColorHighlight="#99CCFF"
                    android:textCursorDrawable="@drawable/cursor_style"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip">

                    <ImageButton
                        android:id="@+id/ibn_add1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/ic_add" />

                    <ImageButton
                        android:id="@+id/ibn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/ibn_add1"
                        android:background="@drawable/ic_delete" />

                    <ImageButton
                        android:id="@+id/ibn_photoAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/cameraline" />

                    <ImageButton
                        android:id="@+id/ibn_PhotoAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-65dp"
                        android:layout_toEndOf="@id/ibn_photoAdd"
                        android:background="@drawable/imageadd" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>