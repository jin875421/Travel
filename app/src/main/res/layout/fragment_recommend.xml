<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ct_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:paddingTop="25dp">


    <!-- 大按钮 -->
    <RelativeLayout
        android:id="@+id/btn_group_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- 右上角按钮 -->
        <Button
            android:id="@+id/btn_Recording"
            android:layout_width="196dp"
            android:layout_height="184dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/recommend_fm_btn_bg"
            android:text="开始旅程"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="15dp"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/topRightButton"
            android:layout_width="196dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/btn_Recording"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/btn_Recording"
            android:background="@drawable/recommend_fm_btn_bg"
            android:text="我的相册"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            android:textStyle="bold" />

        <!-- 右下角按钮 -->
        <Button
            android:id="@+id/bottomRightButton"
            android:layout_width="196dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn_Recording"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/btn_Recording"
            android:background="@drawable/recommend_fm_btn_bg"
            android:elevation="8dp"
            android:text="我的足迹"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>