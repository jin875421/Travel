<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ct_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/travel_shouye">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collpasing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp">
                <LinearLayout
                    android:id="@+id/lrlt"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/background_frame_1"
                    android:elevation="1dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/lrlt_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/travel_begin" />
<!--                        <ImageView-->
<!--                            android:layout_width="70dp"-->
<!--                            android:layout_height="20dp"-->
<!--                            android:src="@drawable/homepage_mytravel" />-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="旅程"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lrlt_footprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/travel_itinerary" />
<!--                        <ImageView-->
<!--                            android:layout_width="70dp"-->
<!--                            android:layout_height="20dp"-->
<!--                            android:src="@drawable/homepage_myfootprint" />-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="足迹"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lrlt_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/travel_photo" />
<!--                        <ImageView-->
<!--                            android:layout_width="70dp"-->
<!--                            android:layout_height="20dp"-->
<!--                            android:src="@drawable/homepage_myphoto" />-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="相册"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lrlt_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/more_tool" />
<!--                        <ImageView-->
<!--                            android:layout_width="70dp"-->
<!--                            android:layout_height="20dp"-->
<!--                            android:src="@drawable/homepage_myphoto" />-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_collapseMode="pin">
                    <LinearLayout
                        android:id="@+id/community_top"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_searchtext"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="3"
                            android:hint="输入关键字搜索"
                            android:textColorHint="#aaaaaa"
                            android:layout_marginRight="20dp"
                            android:layout_margin="6dp"
                            android:background="@drawable/background_frame"
                            android:textSize="16sp"
                            android:drawableLeft="@drawable/search_16_white"
                            android:singleLine="true"
                            android:imeOptions="actionSearch" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/today_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="今日推荐"
                            android:drawableLeft="@mipmap/symbol"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/pictures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/today_recommend"
                        android:orientation="vertical"
                        android:layout_marginVertical="5dp"
                        android:elevation="3dp"
                        android:background="@drawable/background_frame_1"
                        android:layout_marginHorizontal="8dp">
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/reco_vp2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp" />
                        <TextView
                            android:id="@+id/attraction_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="景点名称"
                            android:background="@drawable/background_frame_2"
                            android:gravity="center"
                            android:textColor="#FAFAFA"
                            android:textSize="16dp" />
                        <LinearLayout
                            android:id="@+id/index_dot"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="12dp"
                            android:layout_alignParentBottom="true"
                            android:paddingTop="5dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/pictures"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/background_frame_1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/local_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:drawableLeft="@drawable/homepage_gps"
                            android:paddingTop="5dp"
                            android:paddingBottom="2dp"
                            android:text="当前城市" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ListView
                                android:id="@+id/local_post"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
