<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ct_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">
    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/border_background"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
           >
        <!-- 时间 -->
        <RelativeLayout
            android:id="@+id/time"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_margin="25dp"

            >

            <TextClock
                android:id="@+id/textClockTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:format24Hour="kk:mm"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#DFDFDF"/>
        <!-- 星期 -->
        <RelativeLayout
            android:id="@+id/week"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextClock
                android:id="@+id/textClockWeekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:format24Hour="EEEE"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DFDFDF"/>
            <!-- 今日日期 -->
            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                >

                <TextClock
                    android:id="@+id/textClockDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:format24Hour="MMMM d, yyyy"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>
    </LinearLayout>

    <!-- 大按钮 -->
    <RelativeLayout
        android:id="@+id/btn_group_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerLayout">

        <!-- 右上角按钮 -->
        <Button
            android:id="@+id/btn_Recording"
            android:layout_width="196dp"
            android:layout_height="184dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/recommend_fm_btn_bg"
            android:text="开始旅程"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="15dp"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/topRightButton"
            android:layout_width="196dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/btn_Recording"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/btn_Recording"
            android:background="@drawable/recommend_fm_btn_bg"
            android:text="我的相册"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            android:textStyle="bold" />

        <!-- 右下角按钮 -->
        <Button
            android:id="@+id/bottomRightButton"
            android:layout_width="196dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn_Recording"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/btn_Recording"
            android:background="@drawable/recommend_fm_btn_bg"
            android:elevation="8dp"
            android:text="我的足迹"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>