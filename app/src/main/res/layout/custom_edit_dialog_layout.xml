<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_frame_4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_frame_4"
        android:padding="10dp"
        android:text="新建分组"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_frame_4"
        android:padding="10dp"
        android:text="标题最多不超过12个字"
        android:textColor="#666666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_tips"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_frame_5"
        android:hint="在这里输入一些内容"
        android:padding="5dp"
        android:textSize="15sp" />

    <View
        android:id="@+id/dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dialog_input"
        android:background="#50AAAAAA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_line"
        android:background="@drawable/background_frame_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_button_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#FF0000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#50AAAAAA" />

        <TextView
            android:id="@+id/dialog_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#03A9F4" />
    </LinearLayout>

</RelativeLayout>
